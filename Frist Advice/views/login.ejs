<%- include('layouts/header'); -%>
        <!--HEADER end-->
        <div id="pageintro" class="hoc clear">
            <article>
                <h1 style="font-size: 35px;">Sign In</h1>
                <form name="myForm" action="" method="post">
                    <span class="input-group-addon" style="font-size: 40px;"><i class="fa fa-user"></i></span>
                    <input type="text" placeholder="Username or Email" name="username"
                        style="text-align: center;background: transparent;
                                height: 30px; width: 300px; 
                                font-size: large;margin-left: 33%; margin-top: 2%;
                                margin-bottom: 3%;">
                
                    <span class="input-group-addon" style="font-size: 40px;"><i class="fa fa-lock"></i></span>
                    <input type="password" placeholder="Password" name="password"
                            style="text-align: center;background: transparent;
                                    height: 30px; width: 300px; 
                                    font-size: large;margin-left: 33%; margin-top: 2%;margin-bottom: 3%;">

                    <input class="btn" type="submit" value="Login">
                    <p id="errors">
                        <% 
                          if (typeof(error) !== 'undefined') {
                        %>
                              <%= error %>
                        <% 
                          }
                        %> 
                    </p>
                </form>
            </article>
        </div>
    </div>
    <!--FOOTER start-->
    <%- include('layouts/footer'); -%>